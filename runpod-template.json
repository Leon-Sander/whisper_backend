{
    "name": "Live Speech-to-Text API",
    "description": "Real-time speech transcription using Distil-Whisper",
    "dockerImageName": "YOUR_DOCKERHUB_USERNAME/speech-to-text-api:latest",
    "containerPort": 8000,
    "dockerArgs": [
        "--gpus",
        "all"
    ],
    "volumeMounts": [
        {
            "hostPath": "/workspace/whisper_models",
            "containerPath": "/app/whisper_models"
        }
    ],
    "env": {
        "DEVICE": "cuda",
        "COMPUTE_TYPE": "float16"
    },
    "gpu": {
        "type": "NVIDIA A4000",
        "count": 1
    },
    "baseImage": "runpod/pytorch:2.2.0-py3.10-cuda12.1.1-devel-ubuntu22.04",
    "ports": [
        {
            "name": "http",
            "port": 8000,
            "protocol": "TCP"
        },
        {
            "name": "jupyter",
            "port": 8888,
            "protocol": "TCP"
        }
    ],
    "resources": {
        "cpu": 4,
        "memory": "16Gi"
    },
    "features": {
        "jupyter": true,
        "ssh": true,
        "nginx": true
    }
} 